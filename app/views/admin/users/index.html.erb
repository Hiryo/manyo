<%= link_to "Top page", tasks_path %>
<%= link_to 'create', new_admin_user_path %>

<h1>ユーザー一覧</h1>
<table>
  <tr>
    <th>id</th>
    <th>作成者</th>
    <th>タスク数</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.tasks.length %></td>
    <td><%= link_to '詳細', admin_user_path(user.id) %></td>
    <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
    <td><%= link_to "削除", admin_user_path(user.id), method: :delete, data: { confirm: '削除しますか？'} %></td>
  </tr>
<% end %>
</table>
