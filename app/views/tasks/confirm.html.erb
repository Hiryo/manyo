<h3>以下の内容で送信する。</h3>
<%= form_with(model: @task, url: tasks_path, local: true) do |f| %>
  <%= f.hidden_field :status %>
  <%= f.hidden_field :priority %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :detail %>
  <%= f.hidden_field :expired_at %>
  <p>ステータス:<%= @task.status %></p>
  <p>優先順位:<%= @task.priority %></p>
  <p>名前:<%= @task.name %></p>
  <p>詳細:<%= @task.detail %></p>
  <p>終了期限:<%= @task.expired_at %></p>
  <%= f.submit "送信" %>
  <%= f.submit "戻る", name: 'back' %>
<% end %>