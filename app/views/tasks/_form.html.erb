<%= form_with(model: @task, local: true ,url: choose_new_or_edit) do |f| %>
  <% if @task.errors.any? %>
    <div id ="error_explanation">
      <h2><%= @task.errors.count %>件のエラーあります。</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="task_content">
    <%= f.label :status %>
    <%= f.select :status, Task.statuses.keys %>
  </div>
  <div class="task_content">
    <%= f.label :priority %>
    <%= f.select :priority, Task.priorities.keys %>
  </div>
  <div class="task_content">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
    <div class="task_content">
      <%= f.label :detail %>
      <%= f.text_field :detail %>
    </div>
    <div class="task_content">
      <%= f.label :deadline %>
      <%= f.date_field :expired_at %>
    </div>
  <%= f.submit :"投稿する" %>
<% end %>
<%= link_to "一覧に戻る", tasks_path %>
